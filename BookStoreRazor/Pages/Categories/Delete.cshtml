@page
@model BookStoreRazor.Pages.Categories.Delete
@{
    ViewData["Title"] = "Delete Category";
}

<form method="post">
    <input hidden asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary pl-3">Delete Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input disabled asp-for="@Model.Category.Name" class="form-control" type="text" />
        </div>

        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input disabled asp-for="@Model.Category.DisplayOrder" class="form-control" type="text" />
        </div>

        <button style="width: 150px;" type="submit" class="btn btn-danger">Delete</button>

        <a asp-page="Index" class="btn btn-secondary" style="width: 150px;">Back to List</a>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}