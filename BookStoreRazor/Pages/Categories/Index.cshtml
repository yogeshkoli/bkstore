@page
@model BookStoreRazor.Pages.Categories.Index
@{
    ViewData["Title"] = "Index";
}

<div class="container p3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-page="create"><i class="bi bi-plus-lg"></i> &nbsp; Create new Category</a>
        </div>
    </div>

    <table class="table table-hover" style="width: 100%;">
        <thead>
            <tr>
                <th>Name</th>
                <th>Display Order</th>
                <th width="20%">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Name</td>
                    <td>@category.DisplayOrder</td>
                    <td>
                        <a asp-page="Edit" asp-route-id="@category.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="Delete" asp-route-id="@category.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash2"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>